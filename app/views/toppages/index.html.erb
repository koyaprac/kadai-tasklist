<% if logged_in? %>
  <div class='col-md-6 col-md-offset-3'>
    <h1>タスク一覧</h1>
    

    <% if @tasks %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>id</th>
          <th>Status</th>
          <th>タスク内容</th>
        </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= link_to task.id, task %></td>
              <td><%= task.status %></td>
              <td><%= task.content %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>タスク登録なし</p>
    <% end %>
    
    <%= link_to "新規タスク追加", new_task_path, class: "btn btn-primary" %>

  </div>
<% else %>
  <div class='text-center'>
    <h1>Tasklist へようこそ</h1>
    <p>試験中</p>
  </div>
<% end %>